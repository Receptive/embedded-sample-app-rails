<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <img src="<%= Faker::LoremPixel.image("250x250", false, 'food') %>" />
  </div>
  <div class="col-md-3">
    <h1><%= @name %></h1>
    <ul>
    <% @ingredients.each do |ingredient| %>
    <li><%= raw ingredient %></li>
    <% end %>
    </ul>
    <%= link_to "Generate another!", root_path, class: "btn btn-primary pull-right", remote: true %>
  </div>
</div>
